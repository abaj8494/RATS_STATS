#:import MDTopAppBar kivymd.uix.toolbar.MDTopAppBar
#:import ThemeManager kivymd.theming.ThemeManager
#:import MDCheckbox kivymd.uix.selectioncontrol.MDCheckbox
#:import MDTextField kivymd.uix.textfield.MDTextField

# drop this code in a widget to give it a big red background
# perfect for debugging layout issues
#canvas.before:
#    Color:
#        rgba: 1, 0, 0, 1  # red
#    Rectangle:
#        pos: self.pos
#        size: self.size


BoxLayout:
    orientation: 'vertical'
    MDTopAppBar:
        id: toolbar
        title: 'RATS App - Now Beautiful'
        md_bg_color: app.theme_cls.primary_color

    RatsScreenManager:
        id:rsm
        orientation: 'vertical'

        # Screen: <name>
        MenuScreen: # 'menu'
        ConfirmInputScreen: # 'confirm_input'
        ChooseStatsScreen: # 'choose_stats'
        ReadScreen: # 'read_stats'
        ExportScreen: # 'config_menu'
        PlayBreakScreen: # 'play_break_screen'
        TeamSelectScreen: # 'team_select'
        SelectOffenceScreen: # 'select_offence'
        SelectPlayersScreen: # 'select_players'
        PullingScreen: # 'pulling'
        SelectActionScreen: # 'select_action'

# <> makes it a rule
<Separator@Widget>
    size_hint_y: None
    height: dp(6)
    color: 1, 1, 1, 1
    background_image: ''

    canvas:
        Color:
            rgba: root.color
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background_image

<MenuScreen>
    name:'menu'
    BoxLayout:
        orientation:'vertical'
        padding:[40,40,40,40]
        spacing:20
        size_hint:(1,1)
        MDLabel:
            # i don't know why but i can't seem to resize this
            # how is self.size being worked out
            # it's too big for the menu imo

            #canvas.before:
            #    Color:
            #        rgba: 1, 0, 0, 1  # red
            #    Rectangle:
            #        pos: self.pos
            #        size: self.size
            font_style:'H6'
            theme_text_color:'Primary'
            text:'Construct Your Life'
            halign:'center'
            size_hint:(1,0.25)
        MDRaisedButton:
            text:'Take New Stats'
            pos_hint: {'center_x':0.5}#,'center_y':0.6}
            #size_hint_x: 0.5 # this causes Critical Clock max_iteration warning
            size_hint:(0.35,0.18)
            on_release:root.goto_confirm_input()
        MDRaisedButton:
            text:'Continue Old Stats'
            pos_hint: {'center_x':0.5}
            size_hint:(0.35,0.18)
            on_release:root.goto_continue_stats()

        MDRaisedButton:
            text:'Check Readout'
            pos_hint: {'center_x':0.5}
            size_hint:(0.35,0.18)
            #on_release:root.goto_read_stats()

        MDRaisedButton:
            text:'Exit'
            pos_hint:{'center_x':0.5}
            size_hint:(0.35,0.18)
            on_release:app.get_running_app().stop()

<ConfirmInputScreen>
    name:'confirm_input'
    BoxLayout:
        id:BiggerBox
        orientation:'vertical'
        BoxLayout:
            orientation:'horizontal'
            padding:[40,40,40,40]
            spacing:20
            id:MainLayout
            size_hint_y:0.8 # good but needs to align to top
            BoxLayout:
                orientation:'vertical'
                id:LabelColumn
                size_hint_x:0.3
                #spacing:10
                MDLabel:
                    text:''
                    text_style:'Caption'
                    size_hint_y:0.2
                MDLabel:
                    text:'Tournament'
                    text_style:'Caption'
                    size_hint_y:0.2
                MDLabel:
                    text:'Point Cap'
                    text_style:'Caption'
                    size_hint_y:0.2
                MDLabel:
                    text:'Time Cap'
                    text_style:'Caption'
                    size_hint_y:0.2
                MDLabel:
                    text:'Timeouts'
                    text_style:'Caption'
                    size_hint_y:0.2
                MDLabel:
                    text:'Year'
                    text_style:'Caption'
                    size_hint_y:0.2

            BoxLayout:
                orientation:'vertical'
                id:DefaultColumn
                size_hint_x:0.3
                spacing:10
                BoxLayout:
                    orientation:'horizontal'
                    size_hint_y:0.2
                    MDLabel:
                        text:'Default'
                        text_style:'Caption'
                    MDCheckbox
                        id:defaultcheck
                        active:True
                        group:'config'
                MDLabel:
                    #tournament
                    id:td_tournament
                    text_style:'Body1'
                    halign:'left'
                    size_hint_y:0.2

                MDLabel:
                    #point cap
                    id:td_point_cap
                    size_hint_y:0.2
                    text_style:'Caption'

                MDLabel:
                    #time cap
                    id:td_time_cap
                    size_hint_y:0.2
                    text_style:'Caption'
                MDLabel:
                    #timeouts
                    id:td_timeouts
                    size_hint_y:0.2
                    text_style:'Caption'
                MDLabel:
                    #year
                    id:td_year
                    size_hint_y:0.2
                    text_style:'Caption'

            BoxLayout:
                #TODO: disabling the text inputs does not clear the text
                orientation:'vertical'
                id:CustomColumn
                size_hint_x:0.3
                spacing:10
                BoxLayout:
                    orientation:'horizontal'
                    size_hint_y:0.2
                    MDLabel:
                        text:'Custom'
                        text_style:'Caption'
                    MDCheckbox
                        id:customcheck
                        active:False
                        group:'config'
                MDTextField:
                    #tournament
                    id:custom_tournament
                    size_hint_y:0.2
                    helper_text:'Tournament'
                    helper_text_mode:'persistent'
                    disabled:defaultcheck.active
                MDTextField:
                    #point cap
                    id:custom_point_cap
                    size_hint_y:0.2
                    helper_text:'Point Cap'
                    helper_text_mode:'persistent'
                    disabled:defaultcheck.active
                MDTextField:
                    #time cap
                    id:custom_time_cap
                    size_hint_y:0.2
                    helper_text:'Time Cap'
                    helper_text_mode:'persistent'
                    disabled:defaultcheck.active
                MDTextField:
                    #timeouts
                    id:custom_timeouts
                    size_hint_y:0.2
                    helper_text:'Timeouts'
                    helper_text_mode:'persistent'
                    disabled:defaultcheck.active
                MDTextField:
                    #year
                    id:custom_year
                    size_hint_y:0.2
                    helper_text:'Year'
                    helper_text_mode:'persistent'
                    disabled:defaultcheck.active

        BoxLayout:
            orientation:'horizontal'
            padding:[40,40,40,40]
            spacing:20
            id:buttonbox
            size_hint_y:0.2
            MDRaisedButton:
                text:'Continue'
                on_release:root.conf_input()
            MDRaisedButton:
                text:'Back'
                on_release:root.go_back()

<ChooseStatsScreen>
    name:'choose_stats'
    BoxLayout:
        orientation:'vertical'
        padding:[40,40,40,40]
        spacing:20
        id:BigBox

        #Label:

<ReadScreen>
    name:'read_stats'
    BoxLayout:
        padding:[40,40,40,40]
        spacing:5
        id:BigBox
        orientation:'vertical'

<ExportScreen>
    name:'config_menu'
    BoxLayout:
        padding:[40,40,40,40]
        spacing:20
        id:BigBox
        orientation:'vertical'
        Label:
            id:content_disp
            size_hint_y: None
            text_size: self.width, None

<PlayBreakScreen>
    name:'play_break_screen'
    BoxLayout:
        padding:[40,40,40,40]
        spacing:20
        id:BigBox
        orientation:'vertical'

<TeamSelectScreen>
    name:'team_select'
    BoxLayout:
        padding:[40,40,40,40]
        spacing:20
        id:BigBox
        orientation:'horizontal'
        #TODO: work out how to change filechooser theme
        # this black background is bc default font is white
        # kivyMD doesn't seem to have a filechooser widget

        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size

        FileChooserListView:
            id:filechA
            path:root.teamlistpath
            size_hint_x:0.5

        FileChooserListView:
            id:filechB
            path:root.teamlistpath
            size_hint_x:0.5

    BoxLayout:
        orientation:'horizontal'
        padding:[40,40,40,40]
        spacing:20
        MDRaisedButton:
            text:'Confirm Teams'
            on_release:root.conf_selec()
        MDRaisedButton:
            text:'Back'
            on_release:root.go_back()

<SelectOffenceScreen>
    name:'select_offence'
    BoxLayout:
        orientation:'vertical'
        padding:[40,40,40,40]
        spacing:20
        size_hint:(1,1)
        id:SOBox

        MDLabel:
            id:whichlabel
            size_hint:1,0.2
            text:'Which team is on offence:'
            halign:'center'
            font_style: 'H6'
            #canvas.before:
            #    Color:
            #        rgba: 1, 0, 0, 1  # red
            #    Rectangle:
            #        pos: self.pos
            #        size: self.size

        MDRaisedButton:
            id:topbutton
            size_hint:(0.8,0.2)
            pos_hint:{'center_x':0.5}
            text:'undef_Top'
            on_release:root.store_offence(self.text)

        MDRaisedButton:
            id:bottombutton
            size_hint:(0.8,0.2)
            pos_hint:{'center_x':0.5}
            text:'undef_Bottom'
            on_release:root.store_offence(self.text)

<SelectPlayersScreen>
    name:'select_players'
    BoxLayout:
        id:BiggerBox
        orientation:'vertical'
        spacing:0
        padding:[20,20,20,20]
        BoxLayout:
            id:titlebox
            orientation:'horizontal'
            spacing:10
            # add the take timeout buttons in here
            MDLabel:
                id:subtitle
                text:'Offence: 0 | Defence: 0'
                font_style:'Subtitle1'
                size_hint:(0.25,1)
            MDRaisedButton:
                id:offenceTObutton
                size_hint:(0.2,1)
                on_release:root.start_point_timeout(root.offence)

            MDRaisedButton:
                id:defenceTObutton
                size_hint:(0.2,1)
                on_release:root.start_point_timeout(1-root.offence)
            MDRaisedButton:
                text:'confirm lines'
                size_hint:(0.2,1)
                on_release:root.store_players()
        BoxLayout:
            size_hint:[1,10]
            id:BigBox
            orientation:'horizontal'
            BoxLayout:
                id:LeftBox
                orientation:'vertical'
                padding:[20,20,20,20]
                MDLabel:
                    id:offenceLabel
                    text:'Offence'
            BoxLayout:
                id:RightBox
                orientation:'vertical'
                padding:[20,20,20,20]
                MDLabel:
                    id:defenceLabel
                    text:'Defence'

<PullingScreen>
    name:'pulling'
    BoxLayout:
        id:BiggerBox
        orientation:'vertical'
        spacing:0
        BoxLayout:
            size_hint:[1,10]
            id:BigBox
            orientation:'horizontal'
            BoxLayout:
                id:LeftBox
                orientation:'vertical'
                padding:[40,40,40,40]
                spacing:13
                MDLabel:
                    text:'Available Players'
                    size_hint_y:0.25

            BoxLayout:
                id:RightBox
                orientation:'vertical'
                padding:[40,40,40,40]
                spacing:13
                MDLabel:
                    text:'Available Outcomes'
                    size_hint_y:0.25

<SelectActionScreen>
    name:'select_action'
    BoxLayout:
        id:BiggerBox
        orientation:'vertical'
        spacing:0
        MDLabel:
            text:'Event will be saved when you select action'
            font_style:'H6'
            pos_hint: {'center_x':0.5}
            halign:'center'
        MDLabel:
            text:'Last Three Events:'
            font_stlye:'Headline'
            pos_hint: {'center_x':0.5}
            halign:'center'
        MDLabel:
            id:SequenceLabel
            # text:'No Sequence Loaded'
            font_size:15
            halign:'center'
            pos_hint: {'center_x':0.5}
            # size_hint:[1,0.5]
        BoxLayout:
            size_hint:[1,10]
            id:BigBox
            orientation:'horizontal'
            BoxLayout:
            # StackLayout:
                id:LeftBox
                orientation:'vertical'
                # orientation:'lr-tb'
                padding:[20,0,20,20] # l, t, r, b
                spacing:15
                MDLabel:
                    text:'Available Players'
                    font_style:'Body2'
            BoxLayout:
                id:RightBox
                orientation:'vertical'
                padding:[20,0] #horiz , vert
                spacing:10
                MDLabel:
                    text:'Available Actions'
                    font_style:'Body2'
                    size_hint_y:0.1
